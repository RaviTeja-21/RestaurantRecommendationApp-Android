<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRestaurants">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Restaurants"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant Image"
            android:textSize="20dp"
            android:textColor="#f24646"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginVertical="16dp">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addrestaurantimage"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginVertical="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant Name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#f24646"
            android:gravity="left"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginVertical="16dp">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:id="@+id/restaurantname"
            android:background="@drawable/edittextbg"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            >
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant Address"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#f24646"
            android:gravity="left"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginVertical="16dp">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:id="@+id/restaurantaddress"
            android:background="@drawable/edittextbg"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            >
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuisine Names"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#f24646"
            android:gravity="left"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginVertical="16dp">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:id="@+id/cuisinenames"
            android:background="@drawable/edittextbg"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            >
        </EditText>

       <!--<Spinner
           android:layout_width="match_parent"
           android:layout_height="37dp"

           android:layout_marginRight="50dp"
           android:id="@+id/selectcuisine"
           android:layout_gravity="center"
           android:layout_marginTop="40dp"
           android:paddingLeft="60dp"
           android:textAlignment="center"
           android:layout_marginLeft="40dp"/>-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Restaurants"
            android:id="@+id/btnaddrestaurants"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:background="@drawable/buttonbg"
            />-->
    </LinearLayout>
    </ScrollView>

</LinearLayout>