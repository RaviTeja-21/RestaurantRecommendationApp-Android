<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCuisines">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add cuisines"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuisines Image"
            android:textSize="20dp"
            android:textColor="#f24646"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginVertical="16dp">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addcuisinesimage"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginVertical="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuisines Name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#f24646"
            android:gravity="left"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginVertical="16dp">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:id="@+id/cuisinesname"
            android:background="@drawable/edittextbg"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            >
        </EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Cuisines"
            android:id="@+id/btnaddcusines"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:background="@drawable/buttonbg"
            />-->
    </LinearLayout>

</LinearLayout>